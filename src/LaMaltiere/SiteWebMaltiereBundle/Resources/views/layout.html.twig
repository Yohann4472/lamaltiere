			<a id="catalogue" href="{{ asset('bundles/lamaltieresitewebmaltiere/pdf/CATALOGUE.pdf') }}" target="_blank"><span class="petit">{% if app.session.get('lang') == 'fr' %}Catalogue{% else %}Catalogue{% endif %}</span></a> 

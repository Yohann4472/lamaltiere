{% extends "LaMaltiereSiteWebMaltiereBundle:Templates:layoutModele.html.twig" %}{% block modele %}	<div class="modele">            <h2>{% if app.session.get('lang') == 'fr' %}{{ modele.nom_fr }}{% else %}{{ modele.nom_en }}{% endif %}</h2>            <p>                    {% if app.session.get('lang') == 'fr' %}{{ modele.description_fr|nl2br }}{% else %}{{ modele.description_en|nl2br }}{% endif %}            </p>                        <p>                {% if modele.video_modele %}                    <center><a href="{{ path('lamaltiere_videoslamaltiere') }}">Voir la vid√©o ici</a></center>                {% endif %}            </p>                        {% if modele.categorie.produit.id == 1 %}                    {{ include('LaMaltiereSiteWebMaltiereBundle:Templates:barque.html.twig', {'modele': modele}) }}            {% elseif modele.categorie.produit.id == 2 %}                    {{ include('LaMaltiereSiteWebMaltiereBundle:Templates:remorque.html.twig', {'modele': modele}) }}            {% endif %}                        {% if images|length > 0 %}                <div id='slider' class='swipe' style="max-width:600px; height: 350px;">                      <div class='swipe-wrap'>                            {% for image in images %}                                <div><img src="{{ asset(image)|replace({'\\': '/' }) }}" width="600" height="350" alt="{% if app.session.get('lang') == 'fr' %}{{ modele.nom_fr }}{% else %}{{ modele.nom_en }}{% endif %}" title="{% if app.session.get('lang') == 'fr' %}{{ modele.nom_fr }}{% else %}{{ modele.nom_en }}{% endif %}" /></div>                            {% endfor %}                    </div>                    <span class="nav prev">Prev</span>                    <span class="nav next">Next</span>			                </div>            {% endif %}	</div>{% endblock %}
{% extends "LaMaltiereSiteWebMaltiereBundle::layout.html.twig" %}{% block section %}<section class="conteneur">        <h2>{% if app.session.get('lang') == 'fr' %}Finalisation de ma commande{% else %}Completion of the order{% endif %}</h2>        <center><form action="{{ path('lamaltiere_confirmation') }}" method="POST">            <fieldset class="formCommande">                <p>                    <label for="nom">{% if app.session.get('lang') == 'fr' %}Civilité{% else %}Civility{% endif %} : </label>                    <input type="radio" id="civilite" name="civilite" value="Monsieur" required />{% if app.session.get('lang') == 'fr' %}Monsieur{% else %}Mr{% endif %}                    <input type="radio" id="civilite" name="civilite" value="Madame" />{% if app.session.get('lang') == 'fr' %}Madame{% else %}Mrs{% endif %}                </p>                <p>                    <label for="nom">{% if app.session.get('lang') == 'fr' %}Nom{% else %}Surname{% endif %} : </label>                    <input type="text" required id="nom" name="nom" />                </p>                <p>                    <label for="prenom">{% if app.session.get('lang') == 'fr' %}Prénom{% else %}First name{% endif %} : </label>                    <input type="text" required id="prenom" name="prenom" />                </p>                <p>                    <label for="adresse">{% if app.session.get('lang') == 'fr' %}Adresse{% else %}Adress{% endif %} : </label>                    <input type="text" required id="adresse" name="adresse" />                </p>                <p>                    <label for="cp">{% if app.session.get('lang') == 'fr' %}Code postal{% else %}Postal code{% endif %} : </label>                    <input type="text" required id="cp" name="cp" />                </p>                <p>                    <label for="ville">{% if app.session.get('lang') == 'fr' %}Ville{% else %}City{% endif %} : </label>                    <input type="text" required id="ville" name="ville" />                </p>                <p>                    <label for="pays">{% if app.session.get('lang') == 'fr' %}Pays{% else %}Country{% endif %} : </label>                    <input type="text" required id="pays" name="pays" />                </p>                <p>                    <label for="telephone">{% if app.session.get('lang') == 'fr' %}Numéro de téléphone{% else %}Phone number{% endif %} : </label>                    <input type="tel" required id="telephone" name="telephone" />                </p>                <p>                    <label for="mail">{% if app.session.get('lang') == 'fr' %}Adresse électronique{% else %}Email address{% endif %} : </label>                    <input type="email" required id="mail" name="mail" />                </p>                <input type="submit" value="Valider la commande" />            </fieldset>        </form></center></section>{% endblock %}
{% extends "LaMaltiereSiteWebMaltiereBundle::layout.html.twig" %}{% block section %}<section class="conteneur">	{% set lang = app.session.get('lang') %}	<h2>{% if lang == 'fr' %}Espace presse{% else %}Space press{% endif %}</h2>	{% for article in articles %}                <a href="{{ asset('bundles/lamaltieresitewebmaltiere/presse/' ~ article.chemin ~ '') }}" target=_blank">                <figure class="article">                    <img src="{{ asset('bundles/lamaltieresitewebmaltiere/presse/images/' ~ article.chemin|split('.')[0] ~ '.jpg') }}" height="160px" width="196px" alt="{{ article.publicateur }}" title="{{ article.publicateur }}" />                    <figcaption>                    {{ article.publicateur }}<br />                    {% if lang == 'fr' %}{{ article.date_fr }}{% else %}{{ article.date_en }}{% endif %}<br />                    {% if lang == 'fr' %}{{ article.commentaire_fr }}{% else %}{{ article.commentaire_en }}{% endif %}</figcaption>                </figure>		</a>	{% endfor %}</section>{% endblock %}
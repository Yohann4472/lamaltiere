{% extends "LaMaltiereSiteWebMaltiereBundle::layout.html.twig" %}

{% block section %}
<section class="conteneur">
	<h2>{% trans from "accueil" %}accueil.entreprise.titre{% endtrans %}</h2>
	<div class="presentation">
                <iframe class="video" width="400" height="212" src="{% trans from "accueil" %}accueil.entreprise.lienvideoyoutube{% endtrans %}" frameborder="0" allowfullscreen></iframe>
        <p>
            <span class="gras">{% trans from "accueil" %}accueil.entreprise.texte.denomination{% endtrans %}</span>

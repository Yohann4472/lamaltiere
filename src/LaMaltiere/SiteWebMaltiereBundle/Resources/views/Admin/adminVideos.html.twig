{% extends "LaMaltiereSiteWebMaltiereBundle:Templates:layoutAdministration.html.twig" %}{% block modele %}	<div class="modele">            <h2>Videos<span class="action"><a id="VideoNouveau" href="#video"><img src="{{ asset('bundles/lamaltieresitewebmaltiere/images/icones/document--plus.png') }}" width="16px" height="16px" title="Nouveau" alt="Nouveau" /></a></span></h2>           <p>               <form id="formVideoNouveau" method="post" action="{{ path('lamaltiere_administration_videos_enregistrer') }}">                   <fieldset>                       <div>                           <label for="url">Url de la video : </label>                           <input type="text" required id="url" name="url" size="70" value="" />                       </div>                       <div>                           <label for="lstTypeVideosAdmin">Type : </label>                           <select id="lstTypeVideosAdmin" name="lstTypeVideosAdmin">                               {% for type in typeVideos %}                                   <option value="{{type.id}}">{{ type.getNomTypeFr() }}</option>                               {% endfor %}                           </select>                       </div>                       <input type="submit" value="Enregistrer">                   </fieldset>               </form>           </p>           {% for type in typeVideos %}               <h2>{{ type.getNomTypeFr() }}</h2>               {% for video in type.videos %}                   <h4 class="gras"><object type="text/html" data="{{video.url }}" width="250" height="150"></object><span class="action"><a id="Video{{ video.id }}"  href="#modifier{{ video.id }}"><img src="{{ asset('bundles/lamaltieresitewebmaltiere/images/icones/document--pencil.png') }}" width="16px" height="16px" title="Modifier" alt="Modifier" /></a><a href="{{ path('lamaltiere_administration_videos_supprimer', { 'url' : video.id }) }}"><img src="{{ asset('bundles/lamaltieresitewebmaltiere/images/icones/document--minus.png') }}" width="16px" height="16px" title="Supprimer" alt="Supprimer" /></a></span></h4>                   <p>                       <form id="formVideo{{ video.id }}" method="post" action="{{ path('lamaltiere_administration_videos_enregistrer') }}">                           <fieldset>                               <input type="hidden" id="id" name="id" value="{{ video.id }}" />                               <div>                                   <label for="url">Url de la vid√©o : </label>                                   <input type="text" id="url" name="url" size="70" value="{{ video.url }}" />                               </div>                               <div>                                   <label for="lstTypesVideoAdmin">Type : </label>                                   <select id="lstTypesVideoAdmin" name="lstTypesVideoAdmin">                                       {% for type in typeVideos %}                                           {% if type.id == video.type.id %}                                               <option selected value="{{type.id}}">{{ type.getNomTypeFr() }}</option>                                           {% else %}                                               <option value="{{type.id}}">{{ type.getNomTypeFr() }}</option>                                           {% endif %}                                       {% endfor %}                                   </select>                               </div>                               <input type="submit" value="Enregistrer">                           </fieldset>                       </form>                   </p>               {% endfor %}           {% endfor %}        </div>        <script>            $("form").each(function(){                $(this).hide();            });            $("a").click(function(){                var currentId = $(this).attr('id');                if($('#form' + currentId + '').is(":visible")){                    $('#form' + currentId + '').hide();                }else{                    $('#form' + currentId + '').show();                }            });        </script>{% endblock %}	
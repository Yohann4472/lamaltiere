{% extends "LaMaltiereSiteWebMaltiereBundle:Templates:layoutAdministration.html.twig" %}{% block modele %}	<div class="modele">            <h2>Catégories<span class="action"><a id="CategorieNouveau" href="#type"><img src="{{ asset('bundles/lamaltieresitewebmaltiere/images/icones/document--plus.png') }}" width="16px" height="16px" title="Nouveau" alt="Nouveau" /></a></span></h2>            IMPORTANT : Une catégorie peut être supprimée uniquement si aucun modèle ne lui est rattaché            <p>                <form id="formCategorieNouveau" method="POST" action="{{ path('lamaltiere_administration_categorie_enregistrer') }}">                    <fieldset>                        <div>                            <label for="libelle">Libellé : </label>                            <input type="text" required id="libelle" name="libelle" size="60" value="" />                        </div>                         <div>                            <label for="langue">Langue : </label>                            <input type="text" required id="langue" name="langue" size="10" value="" />                        </div>                        <div>                            <label for="produit">Produit : </label>                            <select name="produit" id="produit">                                {% for produit in produits %}                                    <option value="{{produit.id}}">{{produit.nom }}</option>                                {% endfor %}                            </select>                        </div>                        <input type="submit" value="Enregistrer">                    </fieldset>                </form>            </p>                        {% for produit in produits %}                <h2>{{ produit.nom }}</h2>                {% for categorie in produit.categories %}                    <h4 class="gras">{{ categorie.libelle }} - {{ categorie.lang }} - {{ categorie.modeles.count }} modèles                        <span class="action">                            <a id="Categorie{{ categorie.id }}" href="#modifier{{categorie.id}}">                                <img src="{{ asset('bundles/lamaltieresitewebmaltiere/images/icones/document--pencil.png') }}" width="16px" height="16px" title="Modifier" alt="Modifier" />                            </a>                            {% if categorie.modeles.count == 0%}                                <a href="{{ path('lamaltiere_administration_categorie_supprimer', { id : categorie.id }) }}">                                    <img src="{{ asset('bundles/lamaltieresitewebmaltiere/images/icones/document--minus.png') }}" width="16px" height="16px" title="Supprimer" alt="Supprimer" />                                </a>                            {% endif %}                        </span>                    </h4>                    <p>                        <form id="formCategorie{{ categorie.id }}" method="POST" action="{{ path('lamaltiere_administration_categorie_enregistrer') }}">                            <fieldset>                                <input type="hidden" id="id" name="id" value="{{ categorie.id }}" />                                <div>                                    <label for="libelle">Libellé : </label>                                    <input type="text" required id="libelle" name="libelle" size="60" value="{{ categorie.libelle }}" />                                </div>                                <div>                                    <label for="langue">Langue : </label>                                    <input type="text" required id="langue" name="langue" size="60" value="{{ categorie.lang }}" />                                </div>                                <div>                                    <label for="produit">Produit : </label>                                    <select name="lstProduitAdmin" id="lstProduitAdmin">                                        {% for produit in produits %}                                            {% if produit.id == categorie.produit.id %}                                                <option selected value="{{produit.id}}">{{ produit.nom }}</option>                                            {% else %}                                                <option value="{{produit.id}}">{{ produit.nom }}</option>                                            {% endif %}                                        {% endfor %}                                    </select>                                </div>                                <input type="submit" value="Enregistrer">                            </fieldset>                        </form>                    </p>                {% endfor %}            {% endfor %}        </div>        <script>           $("#lstCategorieAdmin").chained("#selectProduit");            $("form").each(function(){                $(this).hide();            });            $("a").click(function(){                var currentId = $(this).attr('id');                if($('#form' + currentId + '').is(":visible")){                    $('#form' + currentId + '').hide();                }else{                    $('#form' + currentId + '').show();                }            });        </script>{% endblock %}	
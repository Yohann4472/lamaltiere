{% extends "LaMaltiereSiteWebMaltiereBundle:Templates:layoutAdministration.html.twig" %}{% block modele %}	<div class="modele">            <h2>Liens<span class="action"><a id="SiteNouveau" href="#site"><img src="{{ asset('bundles/lamaltieresitewebmaltiere/images/icones/document--plus.png') }}" width="16px" height="16px" title="Nouveau" alt="Nouveau" /></a></span></h2>                        <p>                <form id="formSiteNouveau" method="post" action="{{ path('lamaltiere_administration_site_enregistrer') }}">                    <fieldset>                        <div>                            <label for="nom">Nom du site : </label>                            <input type="text" required id="nom" name="nom" size="70" value="" />                        </div>                        <div>                            <label for="adresse">Adresse du site : </label>                            <input type="text" id="adresse" name="adresse" size="70" value="" />                        </div>                        <div>                            <label for="lstSitesAdmin">Type : </label>                            <select name="lstSitesAdmin" id="lstSitesAdmin">                                {% for type in liens %}                                    <option value="{{type.id}}">{{ type.nom_type }}</option>                                {% endfor %}                            </select>                        </div>                        <input type="submit" value="Enregistrer">                    </fieldset>                </form>            </p>                        {% for type in liens %}                <h2>{{type.nom_type }}</h2>                {% for site in type.sites %}                    <h4 class="gras">{{site.nom |slice(0, 60) }}<span class="action"><a id="Site{{ site.id }}"  href="#modifier{{ site.id }}"><img src="{{ asset('bundles/lamaltieresitewebmaltiere/images/icones/document--pencil.png') }}" width="16px" height="16px" title="Modifier" alt="Modifier" /></a><a href="{{ path('lamaltiere_administration_site_supprimer', { id : site.id }) }}"><img src="{{ asset('bundles/lamaltieresitewebmaltiere/images/icones/document--minus.png') }}" width="16px" height="16px" title="Supprimer" alt="Supprimer" /></a></span></h4>                    <p>                        <form id="formSite{{ site.id }}" method="post" action="{{ path('lamaltiere_administration_site_enregistrer') }}">                            <fieldset>                                <input type="hidden" id="id" name="id" value="{{ site.id }}" />                                <div>                                    <label for="nom">Nom du site : </label>                                    <input type="text" required id="nom" name="nom" size="70" value="{{ site.nom }}" />                                </div>                                <div>                                    <label for="adresse">Adresse du site : </label>                                    <input type="text" id="adresse" name="adresse" size="70" value="{{ site.adresse }}" />                                </div>                                <div>                                    <label for="lstTypeSitesAdmin">Type : </label>                                    <select id="lstTypeSitesAdmin" name="lstTypeSitesAdmin">                                        {% for type in liens %}                                            {% if type.id == site.type.id %}                                                <option selected value="{{type.id}}">{{ type.nom_type }}</option>                                            {% else %}                                                <option value="{{type.id}}">{{ type.nom_type }}</option>                                            {% endif %}                                        {% endfor %}                                    </select>                                </div>                                <input type="submit" value="Enregistrer">                            </fieldset>                        </form>                    </p>                {% endfor %}            {% endfor %}	</div>        <script>            $("form").each(function(){                $(this).hide();            });            $("a").click(function(){                var currentId = $(this).attr('id');                if($('#form' + currentId + '').is(":visible")){                    $('#form' + currentId + '').hide();                }else{                    $('#form' + currentId + '').show();                }            });        </script>{% endblock %}	
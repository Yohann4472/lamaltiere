{% extends "LaMaltiereSiteWebMaltiereBundle:Templates:layoutAdministration.html.twig" %}{% block modele %}	<div class="modele">            <h2>Articles<span class="action"><a id="ArticleNouveau" href="#type"><img src="{{ asset('bundles/lamaltieresitewebmaltiere/images/icones/document--plus.png') }}" width="16px" height="16px" title="Nouveau" alt="Nouveau" /></a></span></h2>                        <p>                <form id="formArticleNouveau" method="POST" action="{{ path('lamaltiere_administration_article_enregistrer') }}">                    <fieldset>                        <div>                            <label for="publicateur">Publicateur : </label>                            <input type="text" required id="publicateur" name="publicateur" size="60" value="" />                        </div>                        <div>                            <label for="date">Date : </label>                            <input type="text" required id="date" name="date" size="60" value="" />                        </div>                        <div>                            <label for="commentaire">Commentaire : </label>                            <input type="text" required id="commentaire" name="commentaire" size="60" value="" />                        </div>                        <div>                            <label for="chemin">Nom de l'image : </label>                            <input type="text" required id="chemin" name="chemin" size="60" value="" />                        </div>                        <div>                            <label for="langue">Langue : </label>                            <input type="text" required id="langue" name="langue" size="10" value="" />                        </div>                        <input type="submit" value="Enregistrer">                    </fieldset>                </form>            </p>                        {% for article in articles %}                <h4 class="gras">{{ article.publicateur }} - {{ article.lang }}<span class="action"><a id="TypeVideo{{ article.id }}" href="#modifier{{article.id}}"><img src="{{ asset('bundles/lamaltieresitewebmaltiere/images/icones/document--pencil.png') }}" width="16px" height="16px" title="Modifier" alt="Modifier" /></a><a href="{{ path('lamaltiere_administration_article_supprimer', { id : article.id }) }}"><img src="{{ asset('bundles/lamaltieresitewebmaltiere/images/icones/document--minus.png') }}" width="16px" height="16px" title="Supprimer" alt="Supprimer" /></a></span></h4>                <p>                    <form id="formTypeVideo{{ article.id }}" method="post" action="{{ path('lamaltiere_administration_article_enregistrer') }}">                        <fieldset>                            <input type="hidden" id="id" name="id" value="{{ article.id }}" />                            <div>                                <label for="publicateur">Publicateur : </label>                                <input type="text" required id="publicateur" name="publicateur" size="60" value="{{ article.publicateur }}" />                            </div>                            <div>                                <label for="date">Date : </label>                                <input type="text" required id="date" name="date" size="60" value="{{ article.date }}" />                            </div>                            <div>                                <label for="commentaire">Commentaire : </label>                                <input type="text" id="commentaire" name="commentaire" size="60" value="{{ article.commentaire }}" />                            </div>                            <div>                                <label for="langue">Langue : </label>                                <input type="text" required id="langue" name="langue" size="10" value="{{ article.lang }}" />                            </div>                            <div>                                <label for="chemin">Nom de l'image : </label>                                <input type="text" required id="chemin" name="chemin" size="60" value="{{ article.chemin }}" />                            </div>                            <center>                                {% if (article.chemin | split('.'))[1] == 'pdf' %}                                    <img src="{{ asset('bundles/lamaltieresitewebmaltiere/images/icones/icone_pdf.png') }}" height="160px" width="196px" alt="presse"/>                                {% else %}                                    <img src="{{ asset('bundles/lamaltieresitewebmaltiere/presse/' ~ article.chemin ~ '') }}" height="160px" width="196px" alt="presse"/>                                {% endif %}                            </center>                             <input type="submit" value="Enregistrer">                        </fieldset>                    </form>                </p>            {% endfor %}	</div>        <script>            $("form").each(function(){                $(this).hide();            });            $("a").click(function(){                var currentId = $(this).attr('id');                if($('#form' + currentId + '').is(":visible")){                    $('#form' + currentId + '').hide();                }else{                    $('#form' + currentId + '').show();                }            });        </script>{% endblock %}	